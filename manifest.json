{
    "manifest_version": 3,
    "name": "Keyword Expander",
    "version": "1.0",
    "description": "Expand keywords into formatted text snippets",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Keyword Expander"
    }
  }