{
    "manifest_version": 3,
    "name": "JustPaste",
    "version": "1.0.2",
    "description": "Expand keywords into formatted text snippets",
    "permissions": [
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "JustPaste"
    },
    "icons": {
    "16": "icons/JP_Logo_v2_16.png",
    "48": "icons/JP_Logo_v2_48.png",
    "128": "icons/JP_Logo_v2_128.png"
    }
  }